<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
              android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/home_team_tool"
            android:textColor="@color/secondary_dark_text"
            android:textSize="@dimen/text_size_normal"
            android:id="@+id/league_textview"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/matchday"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/secondary_dark_text"
            android:id="@+id/matchday_textview"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="@dimen/spacing_normal"        >
        


        <Button
            android:id="@+id/share_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:gravity="center"
            android:text="@string/share_text"
            android:background="@color/primary"
            android:textColor="@color/primary_light_text"
            android:paddingLeft="@dimen/spacing_xxxxlarge"
            android:paddingRight="@dimen/spacing_xxxxlarge"/>
    </FrameLayout>

</LinearLayout>